<?xml version="1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
        
	<LinearLayout
 	    android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:background="@drawable/layout_border" >

        <TextView
            android:id="@+id/txtShopName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_roundedge"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Shop Name  "
            android:textAppearance="?android:attr/textAppearanceLarge" />
       
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        >
        <TextView
            android:id="@+id/txtShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/layout_border"
            android:paddingLeft="@dimen/mediumspace"
            android:paddingRight="@dimen/mediumspace"
            android:text="Inforamation Regarding Shop"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
        

    <LinearLayout
        android:id="@+id/RatingRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip" 
         >
       
        
        <LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_weight="1"
         android:background="@drawable/layout_border">

            <LinearLayout
                android:id="@+id/firstColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                <ImageView
                    android:id="@+id/imgHygiene"
                    android:layout_height="25dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                   
                    
                    android:src="@drawable/star" />	
			    
        		<TextView
            		android:id="@+id/txtHygiene"
            		android:layout_width="wrap_content"
            		android:layout_height="25dp"
            		
            		android:layout_marginLeft="2dp"
        			android:layout_marginRight="2dp"
        			
        			android:layout_gravity="center"
        			android:gravity="center_vertical|center_horizontal|center"
        			android:layout_weight="1"
            		android:text="Hygiene"/>  
            		
               
        		
             </LinearLayout>
             
        		<View
					android:id="@+id/VerticalLine"
            		android:layout_width="1dip"
            		android:layout_height="match_parent"
            		android:layout_marginBottom="2dip"
            		android:layout_marginTop="2dip"
            		android:background="#aaa"/>
        		
        		<LinearLayout
                android:id="@+id/secondColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                 <ImageView
                    android:id="@+id/imgQuality"
                    android:layout_height="25dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                   
                    
                    android:src="@drawable/star" />	
			    
        		<TextView
            		android:id="@+id/txtQuality"
            		android:layout_width="wrap_content"
            		android:layout_height="25dp"
            		
            		android:layout_marginLeft="2dp"
        			android:layout_marginRight="2dp"
        			
        			android:layout_gravity="center"
        			android:gravity="center_vertical|center_horizontal|center"
        			android:layout_weight="1"
            		android:text="Quality"/>  
        		
        		
                    
        	</LinearLayout>
        		<View
					android:id="@+id/VerticalLine"
            		android:layout_width="1dip"
            		android:layout_height="match_parent"
            		android:layout_marginBottom="2dip"
            		android:layout_marginTop="2dip"
            		android:background="#aaa"/>
			<LinearLayout
                android:id="@+id/thirdColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >	
        		
			    <ImageView
                    android:id="@+id/imgService"
                    android:layout_height="25dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                   
                    
                    android:src="@drawable/star" />	
			    
        		<TextView
            		android:id="@+id/txtService"
            		android:layout_width="wrap_content"
            		android:layout_height="25dp"
            		
            		android:layout_marginLeft="2dp"
        			android:layout_marginRight="2dp"
        			
        			android:layout_gravity="center"
        			android:gravity="center_vertical|center_horizontal|center"
        			android:layout_weight="1"
            		android:text="Service"/>    
        		
        			
        		
        		</LinearLayout>
        		
			<View
					android:id="@+id/VerticalLine"
            		android:layout_width="1dip"
            		android:layout_height="match_parent"
            		android:layout_marginBottom="2dip"
            		android:layout_marginTop="2dip"
            		android:background="#aaa"/>
			
			<LinearLayout
                android:id="@+id/fourthColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                
                 >
        		<ImageView
                    android:id="@+id/imageView1"
                    android:layout_height="25dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                   
                    
                    android:src="@drawable/star" />	
			    
        		<TextView
            		android:id="@+id/txtOverall"
            		android:layout_width="wrap_content"
            		android:layout_height="25dp"
            		
            		android:layout_marginLeft="2dp"
        			android:layout_marginRight="2dp"
        			
        			android:layout_gravity="center"
        			android:gravity="center_vertical|center_horizontal|center"
        			android:layout_weight="1"
            		android:text="Overall"/>    
        	
    
            </LinearLayout>

			
			

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnRate"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_button"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Rate"
                android:textColor="@drawable/textcolor_radiobutton" />

        </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/mediumspace"
        android:background="@drawable/layout_border" >

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Address" />
        
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/mediumspace" >
           
    <Button
         android:id="@+id/btn_directions"  
         android:layout_width="80dp"         
         android:layout_height="80dp"
         android:background="@android:color/transparent"
          />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:background="@drawable/layout_border"
        
        android:src="@drawable/direction" />

    </FrameLayout>

    </LinearLayout>

     </LinearLayout>
     
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
       >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
             <RadioGroup 
                android:id="@+id/radio_group_activity_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/radioList"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/List"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/shape_radiobutton"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@drawable/textcolor_radiobutton"                
                    />
                  <View
                	android:id="@+id/VerticalLine"
            		android:layout_width="1dip"
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="4dip"
            		android:layout_marginTop="4dip"
            		android:background="#aaa"
            		
          	 		/>
                 <RadioButton
                    android:id="@+id/radioMap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/Map"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/shape_radiobutton3"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@drawable/textcolor_radiobutton"
                    android:layout_marginRight="4dp"
                   
                    />
                 </RadioGroup>
            
            </LinearLayout>
            
        </RelativeLayout>
     
     </LinearLayout>
