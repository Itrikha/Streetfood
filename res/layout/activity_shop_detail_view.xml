<?xml version="1.0" encoding ="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
        
	<LinearLayout
 	    android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:background="@drawable/layout_border" >

        <TextView
            android:id="@+id/txtShopName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_roundedge"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Shop Name  "
            android:textAppearance="?android:attr/textAppearanceLarge" />
       
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/layout_border">
        <TextView
            android:id="@+id/txtShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingLeft="@dimen/mediumspace"
            android:paddingRight="@dimen/mediumspace"
            android:text="Inforamation Regarding Shop"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
         <!-- Horizontal line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="#aaa"
            />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        
         >

        <TextView
            android:id="@+id/txtRatingsHC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mediumspace"
            android:text="Rating:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/txtRating"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="1.45"
             android:gravity="center_vertical"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <Button
             android:id="@+id/btnRate"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="70dp"
             android:layout_height="wrap_content"
             android:background="@drawable/shape_button"
            android:layout_marginRight="4dp"
             android:textColor="@drawable/textcolor_radiobutton"
             android:text="Rate" />
        
    </LinearLayout>
     <!-- Horizontal line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="#aaa"
            />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/mediumspace" >

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView" />
        
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >
           
    <Button
         android:id="@+id/saveSearchButton"  
         android:layout_width="80dp"         
         android:layout_height="80dp"
         android:background="@android:color/transparent"
          />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/internet" />

    </FrameLayout>

    </LinearLayout>

     </LinearLayout>
     
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
       >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
             <RadioGroup 
                android:id="@+id/radio_group_activity_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/radioList"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/List"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/shape_radiobutton"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@drawable/textcolor_radiobutton"                
                    />
                  <View
                	android:id="@+id/VerticalLine"
            		android:layout_width="1dip"
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="4dip"
            		android:layout_marginTop="4dip"
            		android:background="#aaa"
            		
          	 		/>
                 <RadioButton
                    android:id="@+id/radioMap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/Map"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/shape_radiobutton3"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@drawable/textcolor_radiobutton"
                    android:layout_marginRight="4dp"
                   
                    />
                 </RadioGroup>
            
            </LinearLayout>
            
        </RelativeLayout>
     
     </LinearLayout>
